#:kivy 1.0.9

<CrikBall>:
    size: 20, 20 
    canvas:
        Color:
            
        Ellipse:
            pos: self.pos
            size: self.size 
            source: "ball.jpg" 

<Fielder>:
    size: 25, 25 
    canvas:
        Color:
            rgba: 1, 1, 1, 1
        Ellipse:
            pos: self.pos
            size: self.size 
            source: "fielder.jpg" 


<CrikBat>:
    canvas:
        PushMatrix
        Rotate:
            angle: self.angle
            origin: self.center
        Rectangle:
            pos: self.pos
            size: self.size
            source:"bat.jpg"
        PopMatrix


<CrikWicket>:
    canvas:
        Rectangle:
            pos: self.pos
            size: self.size
            source:"wicket.jpg"
            


<GameWidget>: 
    ball: crik_ball
    bat: crik_bat
    wicket:crik_wicket
    fielder1: fielder1
    fielder2: fielder2
    fielder3: fielder3
    fielder4: fielder4
    fielder5: fielder5
    fielder6: fielder6
    fielder7: fielder7
    fielder8: fielder8
    fielder9: fielder9
    fielder10: fielder10

    canvas:
        Rectangle:
            pos: 0 , root.center_y+150
            size: root.width, 10

        Rectangle:
            pos: root.center_x-50 ,  root.center_y-200
            size: 100, root.height/3
            source: "pitch.jpg"
            
    Label:
        font_size: 70  
        center_x: root.width / 4
        top: root.top - 50
        text: "LETS"

    Label:
        font_size: 70  
        center_x: root.width / 2
        top: root.top - 50
        text: str(root.score)
        
    Label:
        font_size: 70  
        center_x: root.width * 3 / 4
        top: root.top - 50
        text: "PLAY"
        
    CrikBall:
        id: crik_ball
        center: 400,self.parent.center_y

    CrikBat:
        id:crik_bat
        size: 25,50
        
    CrikWicket:
        id:crik_wicket
        size: 100,75
        center_x: self.parent.center_x
        y: 0

    Fielder:
        id: fielder1

    Fielder:
        id: fielder2
    
    Fielder:
        id: fielder3

    Fielder:
        id: fielder4
    
    Fielder:
        id: fielder5

    Fielder:
        id: fielder6
    
    Fielder:
        id: fielder7
    
    Fielder:
        id: fielder8

    Fielder:
        id: fielder9
    
    Fielder:
        id: fielder10
